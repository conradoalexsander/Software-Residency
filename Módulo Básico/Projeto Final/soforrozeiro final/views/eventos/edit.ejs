<%include ../partials/header%>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%=evento.name%></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/eventos/<%=evento._id%>/?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="evento[name]" placeholder="name" value="<%=evento.name%>">
                </div>

                <div class="form-group">
                    <input class="form-control" type="text" name="evento[image]" placeholder="image url" value="<%=evento.image%>">
                </div>

                <div class="form-group">
                    <input class="form-control" type="text" name="evento[description]" placeholder="description" value="<%=evento.description%>">
                </div>

                <div class="form-group">

                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>

        </div>

        <a style="width: 30%; margin: 0 auto;" href="/eventos">Go back</a>

    </div>

</div>



<%include ../partials/footer%>